<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_rename"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_white_selector"

            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/wallet_detail_pop_rename"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/div_line"/>

        <TextView
            android:id="@+id/tv_look_private"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/common_white_selector"

            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/wallet_look_private_key"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/div_line"
            android:visibility="gone"
            android:id="@+id/line2"
            />

        <TextView
            android:id="@+id/tv_look_word"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/common_white_selector"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/wallet_look_word"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"/>

        <TextView
            android:id="@+id/tv_recode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/add_card_detail"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/wallet_record_title"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/div_line"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@drawable/common_white_selector"
            android:drawableStart="@drawable/add_card_delta"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/wallet_detail_pop_delete"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"/>
    </LinearLayout>
</LinearLayout>