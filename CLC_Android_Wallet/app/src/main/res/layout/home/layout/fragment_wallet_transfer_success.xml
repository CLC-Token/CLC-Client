<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/vg_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_below="@id/vg_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bitrich_done"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="@string/wallet_transfer_success_des"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="49dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/btn_summit"
            android:text="@string/wallet_transfer_success_btn"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
