<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:gravity="right"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_card"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_rename"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_white_selector"
            android:drawableLeft="@drawable/add_card_new"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/wallet_me_pop_new"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/div_line"/>

        <TextView
            android:id="@+id/tv_import"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/common_white_selector"
            android:drawableLeft="@drawable/add_card_improt"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/wallet_me_pop_import"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"/>


    </LinearLayout>
</LinearLayout>