<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/please_input_new_name"
        android:textColor="@color/main_txt"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#00000000"
        android:hint="@string/dialog_edit_name_edit_filename"
        android:maxLength="30"
        android:singleLine="true"
        android:textColor="@color/main_txt"
        android:textColorHint="@color/sub_txt"
        android:textSize="14sp" />

    <View
        style="@style/Divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <View
        style="@style/Divider_no_margin"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@drawable/div"
        android:gravity="fill_horizontal|center"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_no_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog"
            android:gravity="center"
            android:text="@string/string_cancel"
            android:textColor="@color/txt_dialog_cancel"
            android:textSize="16sp" >
        </Button>

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog"
            android:gravity="center"
            android:text="@string/string_ok"
            android:textColor="@color/txt_dialog_confire"
            android:textSize="16sp" >
        </Button>
    </LinearLayout>

</LinearLayout>