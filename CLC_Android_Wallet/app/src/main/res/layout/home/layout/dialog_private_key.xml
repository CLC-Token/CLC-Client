<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="14dp"
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close_black"/>

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/bitrice_key"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_close"
        android:src="@drawable/bitrice_key"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:id="@+id/layout_address"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_below="@id/bitrice_key"
        android:layout_marginTop="23.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black20"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/address_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/address"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/hint_text_color"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_private_key"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_below="@id/layout_address"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black20"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/private_key_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/private_key"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/hint_text_color"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/look_private_key_tip"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_private_key"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_copy"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/common_btn_wxj_blue"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/look_private_key_tip"
        android:text="@string/string_copy"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</RelativeLayout>