<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
              android:background="@color/transparent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/popup_pay_input_pwd_title"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/input_pay_pwd"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layout_close"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/close_black"
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"/>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/popuo_pay_input_pwd_etpwd"
            android:background="@color/main_bg"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textCursorDrawable="@drawable/edittext_curor"
            android:hint="@string/input_pay_pwd_hint"
            android:paddingLeft="17.5dp"
            android:paddingRight="17.5dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"

            android:textSize="10dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/popuo_pay_input_pwd_btn"
            android:layout_margin="23dp"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size"
            android:text="@string/wallet_transfer_success_btn"
            android:gravity="center"
            android:background="@drawable/btn_summit"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
    </LinearLayout>
</RelativeLayout>