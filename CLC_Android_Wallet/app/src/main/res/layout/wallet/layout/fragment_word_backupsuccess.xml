<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/sv_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        android:visibility="visible">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:textSize="20dp"

               android:layout_gravity="center_horizontal"
               android:text="@string/word_backup12"
               android:textColor="@color/brightBlueTwo"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="wrap_content"
               android:textSize="16dp"
               android:layout_marginLeft="45dp"
               android:layout_marginTop="5dp"
               android:layout_marginRight="45dp"
               android:text="@string/word_backup12_tips"
               android:textColor="@color/warmGrey"
               android:layout_height="wrap_content" />

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:id="@+id/layout_word"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:layout_height="wrap_content"></LinearLayout>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginTop="20dp"
               android:layout_height="wrap_content">
               <View
                   android:layout_width="6dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="22dp"
                   android:background="@drawable/dot_gray"
                   android:layout_height="6dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:textSize="13dp"
                   android:layout_marginLeft="45dp"
                   android:layout_marginRight="45dp"
                   android:text="@string/word_backup12_tips1"
                   android:textColor="@color/warmGrey"
                   android:layout_height="wrap_content" />

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content">
               <View
                   android:layout_width="6dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="22dp"
                   android:background="@drawable/dot_gray"
                   android:layout_height="6dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:textSize="13dp"
                   android:layout_marginLeft="45dp"
                   android:layout_marginRight="45dp"
                   android:text="@string/word_backup12_tips2"
                   android:textColor="@color/warmGrey"
                   android:layout_height="wrap_content" />

           </RelativeLayout>



           <Button
               android:id="@+id/btn_ok"
               style="?android:attr/borderlessButtonStyle"
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:layout_marginStart="37dp"
               android:layout_marginTop="36dp"
               android:layout_marginEnd="37dp"
               android:background="@drawable/btn_summit"
               android:clickable="false"
               android:layout_marginBottom="25dp"
               android:text="@string/word_backup_confirm"
               android:textAllCaps="false"
               android:textColor="@drawable/text_summit2"/>


       </LinearLayout>

    </ScrollView>

</LinearLayout>